@model Marmoset
@{
    ViewData["Title"] = "Détails Marmoset";
    Marmoset marmoset = Model;
}

@if (marmoset != null)
{
    <div class="card" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">@marmoset.Name</h5>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">@Html.DisplayNameFor(m => m.Color) : @marmoset.Color</li>
        </ul>
        <div class="card-body">
            <a asp-action="Index" class="card-link">Retour à la liste</a>
        </div>
    </div>

    <div>
        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@marmoset.Id">Supprimer</a>
    </div>
}
else
{
    <p class="text-danger">
        Marmoset non trouvé !
    </p>
}